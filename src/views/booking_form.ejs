<h1>Booking Form</h1>
<form method="post" action="/booking">
    <input type="hidden" name="roomId" value="<%= roomId %>">
    <% if (roomId) { %>
        <p class="room-badge">Booking for: <strong>Room <%= roomId %></strong></p>
        <% } %>
            <div class="form-group">
                <label for="firstName">First name:</label>
                <input type="text" id="firstName" name="firstName" required>
            </div>
            <div class="form-group">
                <label for="lastName">Last name:</label>
                <input type="text" id="lastName" name="lastName" required>
            </div>
            <div class="form-group">
                <label for="address">Address:</label>
                <input type="text" id="address" name="address">
            </div>
            <div class="form-group">
                <label for="phone">Phone:</label>
                <input type="tel" id="phone" name="phone" required>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email">
            </div>
            <div class="form-group">
                <label for="arrivalDate">Arrival:</label>
                <input type="date" id="arrivalDate" name="arrivalDate" required>
            </div>
            <div class="form-group">
                <label for="leavingDate">Leaving:</label>
                <input type="date" id="leavingDate" name="leavingDate" required>
            </div>
            <div class="form-group">
                <label for="numberOfPeople">Number of people:</label>
                <input type="number" id="numberOfPeople" name="numberOfPeople" min="1" required>
            </div>
            <div class="form-group">
                <label for="message">Message:</label>
                <textarea id="message" name="message"></textarea>
            </div>
            <button type="submit">Submit Booking</button>
</form>